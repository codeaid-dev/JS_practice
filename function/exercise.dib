#!javascript

// 残余引数1
function sum(...theArgs) {
  let total = 0;
  for (const arg of theArgs) {
    total += arg;
  }
  return total;
}
console.log(sum(1, 2, 3)); // 6
console.log(sum(1, 2, 3, 4)); // 10

#!javascript

// 残余引数2
function countup(a, b, ...next) {
  console.log(a);
  console.log(b);
  console.log(next);
}
countup("one", "two", "three", "four", "five", "six");
// "one"
// "two"
// ["three", "four", "five", "six"]


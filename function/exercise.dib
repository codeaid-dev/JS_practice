// 関数式(引数渡し)
function map(f, a) {
  let result = [];
  for (let i = 0; i != a.length; i++) result[i] = f(a[i]);
  return result;
}
const f = function (x) {
  return x * x * x;
};
let numbers = [0, 1, 2, 5, 10];
let cube = map(f, numbers);
console.log(cube); // [0,1,8,125,1000]

